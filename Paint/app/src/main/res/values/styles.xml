<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#11000000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:background">#11000000</item>
    </style>

    <style name="SeekBarColorRed"
    parent="Widget.AppCompat.SeekBar">
    <item name="colorAccent">@color/red</item>
    </style>

    <style name="SeekBarColorGreen"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="SeekBarColorBlue"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/blue</item>
    </style>

</resources>
